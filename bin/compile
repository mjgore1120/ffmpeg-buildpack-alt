#!/bin/sh

echo "-----> Starting custom build ffmpeg"

BUILD_DIR=$1

echo "-----> BUILD_DIR is: $BUILD_DIR, downloading binaries"


# Here, you can either download a precompiled FFmpeg binary or compile it from source.
# For simplicity, we'll download a precompiled static binary.

FFMPEG_BINARIES="https://drive.google.com/uc?export=download&id=1pdY1D7ZOBM-wla4fgsgEXaB5KGZYGPm_"

echo "download done, executing curl command"

echo "-----> Creating directory for FFmpeg"
mkdir -p /app/vendor/ffmpeg

echo "-----> Downloading and extracting FFmpeg binaries"
curl -L $FFMPEG_BINARIES | tar xJ -C /app/vendor/ffmpeg

echo "-----> FFmpeg installation done"

